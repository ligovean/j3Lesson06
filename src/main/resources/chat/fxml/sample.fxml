<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?scenebuilder-stylesheet /client.css/Styles.client.css?>
<?import java.net.URL?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox fx:id="VBox" alignment="TOP_LEFT" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="chat.client.Controller">

    <stylesheets><URL value="@../css/Styles.css"/></stylesheets>
    <HBox fx:id="topPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="loginFiled"></TextField>
        <PasswordField promptText="Пароль" fx:id="passwordField" onAction="#auth"/>
        <Button fx:id="btn2" onAction="#auth" text="LOGIN"/>
    </HBox>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox fx:id="bottomPanel" managed="false" visible="false">

        <ComboBox fx:id="comboBox"/>



        <TextField fx:id="textField" onAction="#sendMsg" promptText="Enter your message here.." HBox.hgrow="ALWAYS" />
        <Button fx:id="btn1" onAction="#sendMsg" text="SEND"/>
    </HBox>
</VBox>